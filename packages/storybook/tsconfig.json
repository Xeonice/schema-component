{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": ["vite/client", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@schema-component/schema": ["../schema/src"],
      "@schema-component/engine": ["../engine/src"],
      "@schema-component/theme": ["../theme/src"]
    }
  },
  "include": [
    "src",
    "stories",
    "docs",
    ".storybook"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
