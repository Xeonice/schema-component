    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@schema-component/engine": "workspace:*",
    "@schema-component/react-connector": "workspace:*",
    "@schema-component/schema": "workspace:*",
